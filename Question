package physicsGravityMaster;

public class Question {

	private String question;
	private int variable;
	private int number;
	private double answer;

	public Question(int number) {

		this.number = number;
		variable = (int) (Math.random() * 100) + 1;

		switch (number) {
		case 1:
			question = "<html><p>question 1<p></html>";
			break;
		case 2:
			question = "<html><p>question 2<p></html>";
			break;

		case 3:
			question = "<html><p>question 3<p></html>";
			break;

		case 4:
			question = "<html><p>question 4<p></html>";
			break;

		case 5:
			question = "<html><p>question 5<p></html>";
			break;

		case 6:
			question = "<html><p>question 6<p></html>";
			break;

		case 7:
			question = "<html><p>question 7<p></html>";
			break;

		case 8:
			question = "<html><p>question 8<p></html>";
			break;

		case 9:
			question = "<html><p>question 9<p></html>";
			break;

		case 10:
			question = "<html><p>question 10<p></html>";
			break;

		default:
			question = "Error. Question number invalid.";
			break;
		}
	}

	public String toString() {
		return question;
	}

	public double getAnswer() {
		answer = 0;
		switch (number) {
		case 1:
			answer = 0;
			break;
		case 2:
			answer = 0;
			break;

		case 3:
			answer = 0;
			break;

		case 4:
			answer = 0;
			break;

		case 5:
			answer = 0;
			break;

		case 6:
			answer = 0;
			break;

		case 7:
			answer = 0;
			break;

		case 8:
			answer = 0;
			break;

		case 9:
			answer = 0;
			break;

		case 10:
			answer = 0;
			break;

		default:
			answer = 0;
			break;
		}
		return answer;
	}

}
